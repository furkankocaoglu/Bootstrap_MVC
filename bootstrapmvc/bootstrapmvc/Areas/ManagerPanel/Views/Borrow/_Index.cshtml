@model List<bootstrapmvc.Models.Borrow>

@{
    ViewBag.Title = "_Index";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fa fa-check-circle"></i> İade Edilen Kitaplar
            </h4>
            <a href="@Url.Action("Index", "Borrow")" class="btn btn-outline-light">
                <i class="fa fa-arrow-left"></i> Devam Eden Ödünçler
            </a>
        </div>
        <div class="card-body table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-success">
                    <tr>
                        <th>
                            <i class="fa-solid fa-user-graduate me-2"></i> Öğrenci No
                        </th>
                        <th>Kitap</th>
                        <th>Alınma Tarihi</th>
                        <th>Geri Getirme Tarihi</th>
                        <th>Getirdiği Tarih</th>
                        <th>Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Student.StudentNumber</td>
                            <td>@item.Book.Name</td>
                            <td>@item.BorrowDate.ToString("dd.MM.yyyy")</td>
                            <td>@item.DueDate.ToString("dd.MM.yyyy")</td>
                            <td>@(item.ReturnDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                            <td>
                                <span class="badge bg-success">
                                    <i class="fa fa-check-circle"></i> İade Edildi
                                </span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
