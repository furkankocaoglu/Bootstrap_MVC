@model List<bootstrapmvc.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ManagerPanel/Views/Shared/_LayoutPage1.cshtml";
}
@{
    var db = new bootstrapmvc.Models.Model1();
    var deletedCount = db.Books.Count(x => x.IsDeleted);
}


<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <a href="@Url.Action("_Index", "Book")" class="btn btn-outline-danger float-start">
                Silinen Kitaplar <span class="badge bg-danger">@deletedCount</span>
            </a>
            <a href="@Url.Action("Create", "Book")" class="btn btn-outline-success float-end">
                <i class="fa fa-plus"></i> Yeni Kitap Ekle
            </a>
        </div>
        <div class="card-footer">
            <span>@Model.Count kitap listeleniyor</span>
        </div>

        <div class="card-body">
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>İsim</th>
                        <th>Aktif Mi?</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var book in Model)
                    {
                        <tr>
                            <td>@book.ID</td>
                            <td>@book.Name</td>
                            <td>@(book.IsActive ? "Evet" : "Hayır")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Edit", "Book", new { id = book.ID })" class="btn btn-primary" data-bs-toggle="tooltip" title="Düzenle">
                                        <i class="fa-solid fa-pen-to-square text-white"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Book", new { id = book.ID })" class="btn btn-danger" data-bs-toggle="tooltip" title="Sil" onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                        <i class="fa-solid fa-trash text-white"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>